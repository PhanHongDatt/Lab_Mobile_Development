<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">
    <TextView
        android:id="@+id/tv_name_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/blue">
    </TextView>
    <TextView
        android:id="@+id/tv_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_in"
        android:textAllCaps="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_basex4"
        android:textSize="@dimen/text_large"/>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:layout_below="@id/tv_sign_in"
        android:layout_marginTop="@dimen/margin_basex4"
        android:layout_alignParentStart="true"/>

    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="name@gmail.com"
        android:layout_alignTop="@id/tv_user_name"
        android:layout_toEndOf="@id/tv_user_name"/>

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:layout_below="@id/et_username"
        android:layout_marginTop="@dimen/margin_base"
        android:layout_alignParentStart="true"/>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_password"
        android:layout_toEndOf="@id/tv_password"
        android:hint="******"
        android:inputType="textPassword"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#D9D9D9"
        android:padding="@dimen/margin_base"
        android:text="@string/sign_in"
        android:layout_below="@id/et_password"
        android:layout_marginTop="@dimen/margin_base"
        android:layout_alignParentEnd="true"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sign_via_facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_sign_up"
        android:background="#D9D9D9"
        android:layout_marginBottom="@dimen/margin_basex4"
        android:text="@string/sign_via_facebook"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_basex4"
        android:background="#D9D9D9"
        android:text="@string/sign_up"/>
</RelativeLayout>
